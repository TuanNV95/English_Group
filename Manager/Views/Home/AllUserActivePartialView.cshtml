@model List<Manager.Models.TableModel.user_punish>

<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="@item.id">
                <td style="width: 10px;">
                    <div class="form-check">
                        <label class="form-check-label">
                            @*@if (item.punish_id is null)
                                {*@
                            <input class="form-check-input check-punish" type="checkbox">
                            @*}
                                else
                                {
                                    <input class="form-check-input check-punish" type="checkbox" checked>
                                }*@
                            <span class="form-check-sign"></span>
                        </label>
                    </div>
                </td>
                <td class="text-center" style="width: 60px;">
                    @if (item.id_facebook == "1")
                    {
                        <img style="width: 40px; height: 40px;margin-top: 10px;" class="avatar border-gray" src="https://thxd.nuce.edu.vn/wp-content/uploads/2020/06/JaZBMzV14fzRI4vBWG8jymplSUGSGgimkqtJakOV.jpeg" alt="...">
                    }
                    else
                    {
                        <img style="width: 40px; height: 40px;margin-top: 10px;" class="avatar border-gray" src="//graph.facebook.com/@item.id_facebook/picture?type=large&width=100&height=100" alt="...">
                    }
                </td>
                <td class="text-left">@item.full_name</td>
            </tr>
        }
    </tbody>
</table>